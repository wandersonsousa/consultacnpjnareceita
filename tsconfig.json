{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "target": "ES2019",
    "rootDirs": ["src"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
